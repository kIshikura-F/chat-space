.side-menu
  .side-menu__hedder
    .side-menu__hedder__user
      %h3.side-menu__hedder__user__name
        = current_user.name
      .side-menu__hedder__user__icon
        =link_to edit_user_path(current_user), class: "side-menu__hedder__user__icon__link" do
          = fa_icon 'cog'
      .side-menu__hedder__user__icon
        =link_to new_group_path, class: "side-menu__hedder__user__icon__link" do
          = fa_icon 'edit'

  .groups
    - current_user.groups.each do |group|
      .group
        = link_to group_posts_path(group),class: "group__link" do
          .title
            = group.name
          .new-message
            = group.show_last_post